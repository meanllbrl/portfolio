# ==============================================
# FIREBASE CLIENT SDK CONFIGURATION
# ==============================================
# Get these values from:
# Firebase Console → Project Settings → General → Your Apps → Web App
# https://console.firebase.google.com/
# ==============================================

NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# ==============================================
# MIXPANEL ANALYTICS (Optional)
# ==============================================
# Get your token from:
# Mixpanel → Project Settings → Project Token
# https://mixpanel.com/
# 
# If not set, analytics will be disabled.
# ==============================================

NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# Use EU endpoint for GDPR compliance, or remove for US endpoint
NEXT_PUBLIC_MIXPANEL_HOST=https://api-eu.mixpanel.com
